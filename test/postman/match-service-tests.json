      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"player1\": \"player1\",\n  \"player2\": \"player2\"\n}"
        },
        "url": {
          "raw": "http://match-service:5003/matches",
